<!-- app/views/bills/new.html.erb -->
<%= form_for @bill do |f| %>
  <!-- Bill fields -->
  <%= f.label :date %>
  <%= f.date_field :date %>
  <%= f.label :total_amount %>
  <%= f.number_field :total_amount %>
  <%= f.label :total_products %>
  <%= f.number_field :total_products %>
  <h3>--------------------------------------------------------------------------------------------</h3>
  <h1> Add Product</h2>
  <div id="products_fields">
    <%= f.fields_for :bill_details do |b| %>
      <%= render 'product_fields', f: b %>
    <% end %>
  </div>

  <%= link_to_add_fields "Add Product", f, :bill_details %>

  <%= f.submit "Create Bill" %>
<% end %>
