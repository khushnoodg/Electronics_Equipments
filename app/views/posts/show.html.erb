<!-- app/views/posts/show.html.erb -->
<h1><%= @post.title %></h1>

<p><strong>Content:</strong></p>
<%= @post.content %>
<p>
  <strong>Image:</strong>
  <%= image_tag @post.image %>
</p>

<p>
<% if can? :update, @post %>
  <%= link_to 'Edit', edit_post_path(@post) %> |
  <% end %>
  <%= link_to 'Back', posts_path %>
</p>
